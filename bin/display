#!/bin/bash

display=$(echo -e 'work\nhome\none' | rofi -dmenu)
echo $display

if [ $display = work ]; then
    xrandr --output 'DP-0' --pos '0x360' --output 'DP-3' --auto --pos '1920x0'
elif [ $display = home ]; then
    xrandr --output 'DP-0' --pos '0x0' --output 'HDMI-0' --auto --pos '1920x180'
elif [ $display = one ]; then
    xrandr --output 'DP-0' --pos '0x0' --output 'HDMI-0' --off --output 'DP-3' --off
fi
